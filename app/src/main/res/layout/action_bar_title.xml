<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- 左边文字 、 图标 -->
    <TextView
        android:id="@+id/action_bar_back_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/action_bar_left_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/selector_gary"
        android:visibility="invisible" />

    <!-- 中间文字 -->
    <TextView
        android:id="@+id/action_bar_title_txt"
        style="@style/action_title_style"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="@string/app_name" />

    <!-- 右边文字 、 图标 -->
    <ImageView
        android:id="@+id/action_bar_delete_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/action_bar_right_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="invisible" />

</LinearLayout>
