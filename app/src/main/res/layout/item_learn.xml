<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_learn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:text="那些女生做起来很正常，男生做起来很奇怪的事"
        android:textColor="#444444"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_learn_tho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_learn_title"
        android:layout_below="@+id/item_learn_title"
        android:layout_marginTop="4dp"
        android:text="代码家"
        android:textColor="#888888"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/item_learn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_learn_tho"
        android:layout_toRightOf="@+id/item_learn_tho"
        android:text=" - 2016-06-20"
        android:textColor="#888888"
        android:textSize="12sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_learn_tho"
        android:layout_marginTop="12dp"
        android:background="@color/ash_line"/>

</RelativeLayout>